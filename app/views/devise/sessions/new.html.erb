<div class="row justify-content-center" style="text-align: center">

<%= form_for(resource, :html => {:class=>'col-md-4 col-sm-8'}, as: resource_name, url: session_path(resource_name)) do |f| %>

    <%= content_tag(:div, flash[:error],class: 'alert alert-danger', :id => "flash_error") if flash[:error] %>
    <%= content_tag(:div, flash[:notice],class: 'alert alert-danger', :id => "flash_notice") if flash[:notice] %>
    <%= content_tag(:div, flash[:alert],class: 'alert alert-danger', :id => "flash_alert") if flash[:alert] %>

  <div class="form-group">
    <%= f.label "邮箱" %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label "密码" %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <%= f.check_box :remember_me %>
      <%= f.label "记住我的帐号" %>
    </div>
  <% end -%>

  <div class="actions form-group">
    <%= f.submit "登录" %>
  </div>
<% end %>

</div>
<div class="row col-12 justify-content-center" style="text-align: center">
  <%= link_to "忘记密码?", new_password_path(resource_name) %>
</div>